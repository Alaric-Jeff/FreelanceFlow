{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node", "vitest"],
    "strict": true,
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
